{
  "name": "bf-secret-file-downloader",
  "version": "1.0.0",
  "description": "BASIC認証もしくは非公開エリアに置かれたディレクトリに配置されたファイルを管理するWordPressプラグイン",
  "main": "src/index.js",
  "scripts": {
    "build": "wp-scripts build",
    "start": "wp-scripts start",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "lint:md:docs": "wp-scripts lint-md-docs",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "test:e2e": "wp-scripts test-e2e",
    "test:unit": "wp-scripts test-unit-js",
    "phpunit": "wp-env run tests-cli --env-cwd=wp-content/plugins/bf-secret-file-downloader ./vendor/bin/phpunit",
    "phpunit:watch": "wp-env run tests-cli --env-cwd=wp-content/plugins/bf-secret-file-downloader ./vendor/bin/phpunit --watch",
    "release": "node scripts/create-release.js",
    "makepot": "php -d memory_limit=512M /usr/local/bin/wp i18n make-pot . languages/bf-secret-file-downloader.pot --domain=bf-secret-file-downloader",
    "update-po": "msgmerge languages/bf-secret-file-downloader-en_US.po languages/bf-secret-file-downloader.pot -o languages/bf-secret-file-downloader-en_US.po",
    "compile-mo": "msgfmt languages/bf-secret-file-downloader-en_US.po -o languages/bf-secret-file-downloader-en_US.mo",
    "i18n": "npm run makepot && npm run update-po && npm run compile-mo"
  },
  "devDependencies": {
    "@wordpress/scripts": "^26.0.0"
  },
  "dependencies": {
    "@wordpress/block-editor": "^12.0.0",
    "@wordpress/blocks": "^12.0.0",
    "@wordpress/components": "^25.0.0",
    "@wordpress/data": "^9.0.0",
    "@wordpress/element": "^5.0.0",
    "@wordpress/i18n": "^4.0.0"
  }
}